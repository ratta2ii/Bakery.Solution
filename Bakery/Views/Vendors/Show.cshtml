@using Bakery.Models;

<h3>Here are the Orders for @Model["vendor"].Name</h3>    

<ol>
    @foreach (Order order in @Model["orders"])
    {
        <li><a href="/vendors/@Model["vendor"].Id/orders/@order.Id">@order.Description</a></li>
    }
</ol>


<p><a href="/vendors/@Model["vendor"].Id/orders/new">Add another Order</a></p>
<p><a href="/vendors">Return to Vendor List</a></p>
<p><a href="/">Return to Homepage</a></p>